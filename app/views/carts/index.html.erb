<h1>Listing carts</h1>

<table>
  <thead>
    <tr>
      <th>user</th>
      <th>status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.user_id %></td>
        <td><%= cart.status %></td>
        <td><%= link_to 'Show', cart %></td>
<% if cart.status == "pending" %>
        <td><%= link_to 'Edit', edit_cart_path(cart) %></td>
        <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
 <% end %>
      </tr>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New cart', new_cart_path %>
